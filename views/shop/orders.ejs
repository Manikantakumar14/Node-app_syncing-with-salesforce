<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <h1>Order - # <%= orderId %></h1>
                    <a href="/orders/<%= orderId %>">Invoice</a></li>
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                           
                            <ul class="orders__products">
                                
                                    <li class="orders__products-item"><%= order.productTitle %> (<%= order.productQuantity %>) - 
                                        
                              
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %></body>